<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Termux permission for running gforge commands -->
    <uses-permission android:name="com.termux.permission.RUN_COMMAND" />

    <!-- Query Termux package for availability check -->
    <queries>
        <package android:name="com.termux" />
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KB">

        <!-- Keyboard Service -->
        <service
            android:name=".core.KBKeyboardService"
            android:exported="true"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <!-- Settings Activity -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="true"
            android:label="@string/settings_title"
            android:theme="@style/Theme.KB">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Command Editor Activity -->
        <activity
            android:name=".ui.CommandEditorActivity"
            android:exported="false"
            android:label="Custom Commands"
            android:theme="@style/Theme.KB"
            android:parentActivityName=".ui.SettingsActivity" />

        <!-- Broadcast Receiver for external keyboard control -->
        <receiver
            android:name=".communication.KeyboardBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="dev.kymera.keyboard.SET_MODE" />
                <action android:name="dev.kymera.keyboard.INSERT_TEXT" />
                <action android:name="dev.kymera.keyboard.UPDATE_COMMANDS" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
